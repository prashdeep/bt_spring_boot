<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="amazonPay" class="com.bt.payment.AmazonPay" />

    <bean id="googlePay" class="com.bt.payment.GooglePay" />

    <bean id="paytm" class="com.bt.payment.PaytmPay" />

    <bean id="customer" class="com.bt.domain.Customer">
        <constructor-arg name="payment" ref="paytm"/>
    </bean>



</beans>