<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="merchant" class="com.bt.domain.Merchant">

        <!--<constructor-arg name="payment" ref="paytm"/>-->

        <property name="name" value="Reliance Digital"/>

        <property name="gstNumber" value="20AOYPP6788M" />

        <property name="addresses">
            <list>
                <value>Bangalore</value>
                <value>Chennai</value>
                <value>Delhi</value>
                <value>Mumbai</value>
            </list>
        </property>
    </bean>

    <bean id="customer" class="com.bt.domain.Customer" abstract="true"/>

    <bean id="retailCustomer" class="com.bt.domain.RetailCustomer"  parent="customer"/>

    <bean id="corporateCustomer" class="com.bt.domain.CorporateCustomer" parent="customer"/>

</beans>